{
   "manifest_version": 3,
   "name": "IBM Cognos TM1 Web Clipboard Extension",
   "version": "2.0.0",
   "description": "Modern extension that enables IBM Cognos TM1 Web to access the clipboard using the latest Clipboard API.",
   "icons": {
      "16": "icon_16x16.png",
      "48": "icon_48x48.png",
      "128": "icon_128x128.png"
   },
   "background": {
      "service_worker": "background.js"
   },
   "content_scripts": [
      {
         "matches": ["http://*/*", "https://*/*"],
         "js": ["contentscript.js"],
         "all_frames": true
      }
   ],
   "permissions": [
      "clipboardRead",
      "clipboardWrite"
   ],
   "host_permissions": [
      "http://*/*",
      "https://*/*"
   ]
}
